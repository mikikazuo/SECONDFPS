#ifndef BULLET_H_
#define BULLET_H_

#include "glm.h"



#include "fps.h"
#include "OBB.h"
#include "map.h"
#include "player.h"

class player;

#define MAXBULLET 300


typedef struct {
	int count;
	vec3 position;
	vec3 dir;
}Shot;

typedef enum{
	Crossbow,
	Rifle,
	Gatling,
	Spear,
	Magicstick,
	Magic,
	Mob,
	nonemode
}bulletmode;

typedef enum{
	r,
	b
}Team;

class bullet : public OBB{
private:
	Shot bullet_info[MAXBULLET];

	int lifetime;

	int reloadtime;
	int speed;
	bulletmode mode;
	int modemovecount;
	float bulletradi;
public:
	bullet();
	void bullet_Initialize(bulletmode setbulletmode);
	void HitObj();
	void HitObj(Team enemyteam,float atk);
	void PlayerToMob();
	void MobToPlayer(int atk);
	void reload();
	void setInfo(vec3 playerposition,vec3 playerdir);
	void Update();
	void Draw();

	int reloadmax;
	int launchbulletcount;

	virtual ~bullet();
};

#endif /* BULLET_H_ */
